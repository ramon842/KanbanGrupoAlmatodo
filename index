    <div class="kanban-container">
        <div class="kanban-column" id="todo">
            <h2>Por Iniciar</h2>
            <div class="task-list" id="todo-list"></div>
            <button class="btn btn-primary add-task-btn" onclick="addTask('todo-list')">Agregar Tarea</button>
        </div>
        <div class="kanban-column" id="in-progress">
            <h2>En Proceso</h2>
            <div class="task-list" id="in-progress-list"></div>
        </div>
        <div class="kanban-column" id="done">
            <h2>Terminado</h2>
            <div class="task-list" id="done-list"></div>
        </div>
    </div>
    
    <script>
        function addTask(columnId) {
            const taskText = prompt("Ingrese el nombre de la tarea:");
            if (taskText) {
                const task = document.createElement("div");
                task.classList.add("kanban-task");
                task.innerHTML = `
                    <span>${taskText}</span>
                    <button class="btn btn-sm btn-danger float-end" onclick="this.parentElement.remove()">
                        <i class="fas fa-trash"></i>
                    </button>
                `;
                document.getElementById(columnId).appendChild(task);
            }
        }
        
        document.addEventListener("DOMContentLoaded", function() {
            new Sortable(document.getElementById("todo-list"), { group: "kanban", animation: 150 });
            new Sortable(document.getElementById("in-progress-list"), { group: "kanban", animation: 150 });
            new Sortable(document.getElementById("done-list"), { group: "kanban", animation: 150 });
        });
    </script>
